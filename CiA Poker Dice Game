import sys
import random
for x in range(6):
    dice1 = random.randint(1, 6)
    dice2 = random.randint(1, 6)
    dice3 = random.randint(1, 6)

def intro():
#Global allows a variable to have the same value throughout different functions. Eg. if vchoosename was a variable in a\
# function defined as intro() with the value of 1, and vchoosename is global and used in another function, then the\
# vchoosename variable's value in the other function is 1
    global vChoosename1
    global vChoosename2
    global vChoosename3
    global vChoosename4
    print("Welcome player(s) to the game of POKER DICE. To win, you need to have the most points by the end of 5 rolls.")
    print("\nThe rules of this game are simple:\n1. Answer all the questions appropriately, or you shall be punished\n2. Be PG\n3. Have Fun!")
    vChoosename1 = str(input("\nENTER PLAYER1 NAME: "))
    vChoosename2 = str(input("ENTER PLAYER2 NAME(if none, type none): "))
    if vChoosename2.lower() == "none":
        f_roll_dice_1()
    if vChoosename2.lower() != "none":
        vChoosename3 = str(input("ENTER PLAYER3 NAME(if none, type none): "))
        if vChoosename3.lower() == "none":
            f_roll_dice_1()
        if vChoosename3.lower() != "none":
            vChoosename4 = str(input("ENTER PLAYER4 NAME(if none, type none): "))
            if vChoosename4.lower() == "none":
                f_roll_dice_1()


def f_roll_dice_1():
#variables
    global vChoosename1
    global vChoosename2
    global points_1
    vCount_1 = 5
    points_1 = 0
    vCount_internal_1 = 0
    print("\nWould", vChoosename1, "like to roll?")
    question1 = str(input("Yes or No: " ))

    while question1.lower() != "no":
        global vChoosename2
    #Inputs random integers between 1 and 6 (including 1 and 6) into the following variables (dice1, dice2 and dice3)
        dice1 = random.randint(1, 6)
        dice2 = random.randint(1, 6)
        dice3 = random.randint(1, 6)
    #variable l is a list containing all three dice variables
        l = [dice1,dice2,dice3]
    #variable list_2 is the above variable sorted, so the list is the smallest integer to the largest integer
        list_2 = sorted(l)
        Even = list_2[0] % 2 == 0 and list_2[1] % 2 == 0 and list_2[2] % 2 == 0
        Odd = list_2[0] % 2 == 1 and list_2[1] % 2 == 1 and list_2[2] % 2 == 1
    # The below if statements are based on the dices values
        if list_2[0] == list_2[1] == list_2[2]:
    #if all three dices are the same
            print(list_2)
        #the variable's value gets added the value written at the end (underneath is the points_1 variable added 50
            points_1 = points_1 + 50
            vCount_1 = vCount_1 - 1
            vCount_internal_1 = vCount_internal_1 + 1
            print("THREE OF A KIND! Congratulations, you get 50 points!")
        #Even is the variable that contains the code that determines if the dices are all even numbers
            if Even:
                points_1 = points_1 + 25
                print("ALSO EVEN NUMBERS AND PAIRS! Congratulations, you get an extra 25 points!")
                print("Points: ", points_1)
                print("Number of tries left: "+str(vCount_1))
            # if the vCount_internal_1 reaches 5, as everytime the dice is rolled the vCount_internal_1's value get's added 1, the bottom code runs
                if vCount_internal_1 == 5:
                    print("GAME OVER! Total points: ", points_1)
                    if vChoosename2.lower() != "none":
                        f_roll_dice_2()
                    if vChoosename2.lower() == "none":
                        Total_tally()
                if vCount_internal_1 != 5:
                    question1 = str(input("Roll again? " ))
        #Odd is the variable that contains the code that determines if the dices are all odd numbers
            if Odd:
                points_1 = points_1 + 25
                print("ALSO ODD NUMBERS AND PAIRS! Congratulations, you get an extra 25 points!")
                print("Points: ", points_1)
                print("Number of tries left: "+str(vCount_1))
                if vCount_internal_1 == 5:
                    print("GAME OVER! Total points: ", points_1)
                    if vChoosename2.lower() != "none":
                        f_roll_dice_2()
                    if vChoosename2.lower() == "none":
                        Total_tally()
                if vCount_internal_1 != 5:
                    question1 = str(input("Roll again? " ))
        if list_2[0] < list_2[1] < list_2[2] and list_2[0] + 1 == list_2[1] and list_2[1] + 1 == list_2[2]:
    #if the dices are straight (eg. dice1 = 1, dice2 = 2, dice3 = 3)
            print(list_2)
            points_1 = points_1 + 30
            vCount_1 = vCount_1 - 1
            vCount_internal_1 = vCount_internal_1 + 1
            print("STRAIGHT! Congratulations, you get 30 points!")
            print("Points: "+ str(points_1))
            print("Number of tries left: "+str(vCount_1))
            if vCount_internal_1 == 5:
                print("GAME OVER! Total points: ", points_1)
                if vChoosename2.lower() != "none":
                    f_roll_dice_2()
                if vChoosename2.lower() == "none":
                    Total_tally()
            if vCount_internal_1 != 5:
                question1 = str(input("Roll again? " ))
        if list_2[0] % 2 == 0 and list_2[1] % 2 == 0 and list_2[2] % 2 == 0 and list_2[0] != list_2[2]:
        #if the dices are all even numbers
            print(list_2)
            points_1 = points_1 + 15
            vCount_1 = vCount_1 - 1
            vCount_internal_1 = vCount_internal_1 + 1
            print("EVEN NUMBERS! Congratulations, you get 15 points!")
            print("Points: "+ str(points_1))
        #This if statement also checks if any of the dices are also pairs
            if list_2[0] == list_2[1] or list_2[1] == list_2[2]:
                points_1 = points_1 + 10
                print("ALSO PAIRS! Congratulations, you get an extra 10 points!")
                print("Points: ", points_1)
                print("Number of tries left: "+str(vCount_1))
                if vCount_internal_1 == 5:
                    print("GAME OVER! Total points: ", str(points_1))
                    if vChoosename2.lower() != "none":
                        f_roll_dice_2()
                    if vChoosename2.lower() == "none":
                        Total_tally()
                if vCount_internal_1 != 5:
                    question1 = str(input("Roll again? " ))
        #If the dices' values are all different
            if list_2[0] != list_2[1] != list_2[2]:
                print("Number of tries left: "+str(vCount_1))
                if vCount_internal_1 == 5:
                    print("GAME OVER! Total points: ", str(points_1))
                    if vChoosename2.lower() != "none":
                        f_roll_dice_2()
                    if vChoosename2.lower() == "none":
                        Total_tally()
                if vCount_internal_1 != 5:
                    question1 = str(input("Roll again? " ))
        if list_2[0] % 2 == 1 and list_2[1] % 2 == 1 and list_2[2] % 2 == 1 and list_2[0] != list_2[2]:
        #if the dices are all odd numbers
            print(list_2)
            points_1 = points_1 + 15
            vCount_1 = vCount_1 - 1
            vCount_internal_1 = vCount_internal_1 + 1
            print("ODD NUMBERS! Congratulations, you get 15 points!")
            print("Points: "+ str(points_1))
        #This if statement also checks if any of the dices are also pairs
            if list_2[0] == list_2[1] or list_2[1] == list_2[2]:
                points_1 = points_1 + 10
                print("ALSO PAIRS! Congratulations, you get an extra 10 points!")
                print("Points: ", points_1)
                print("Number of tries left: "+str(vCount_1))
                if vCount_internal_1 == 5:
                    print("GAME OVER! Total points: ", str(points_1))
                    if vChoosename2.lower() != "none":
                        f_roll_dice_2()
                    if vChoosename2.lower() == "none":
                        Total_tally()
                if vCount_internal_1 != 5:
                    question1 = str(input("Roll again? " ))
        #If the dices' values are all different
            if list_2[0] != list_2[1] != list_2[2]:
                print("Number of tries left: "+str(vCount_1))
                if vCount_internal_1 == 5:
                    print("GAME OVER! Total points: ", points_1)
                    if vChoosename2.lower() != "none":
                        f_roll_dice_2()
                    if vChoosename2.lower() == "none":
                        Total_tally()
                if vCount_internal_1 != 5:
                    question1 = str(input("Roll again? " ))
    #This long chunk of code checks if any of the dices are the same, but only if they aren't all even, odd or different numbers
        if list_2[0] == list_2[1] and list_2[0] and list_2[1] != list_2[2] and list_2[0] % 2 and list_2[1] % 2 != list_2[2] % 2 \
            or list_2[1] == list_2[2] and list_2[1] and list_2[2] != list_2[0] and list_2[1] % 2 and list_2[2] % 2 != list_2[0] % 2:
            print(list_2)
            points_1 = points_1 + 10
            vCount_1 = vCount_1 - 1
            vCount_internal_1 = vCount_internal_1 + 1
            print("PAIR! Congratulations, you get 10 points!")
            print("Points: "+ str(points_1))
            print("Number of tries left: "+str(vCount_1))
            if vCount_internal_1 == 5:
                print("GAME OVER! Total points: ", points_1)
                if vChoosename2.lower() != "none":
                    f_roll_dice_2()
                if vChoosename2.lower() == "none":
                    Total_tally()
            if vCount_internal_1 != 5:
                question1 = str(input("Roll again? " ))
    #This if statement checks if any of the numbers are any of the above if statements, and if their not, the below code runs
        if list_2[0] % 2 == 0 and list_2[1] % 2 == 0 and list_2[2] % 2 == 1 and list_2[0] != list_2[1]\
        or list_2[0] % 2 == 1 and list_2[1] % 2 == 1 and list_2[2] % 2 == 0 and list_2[0] != list_2[1]:
            print(list_2)
            print("Sorry, but you've struck out!")
            points_1 = points_1 + 0
            vCount_1 = vCount_1 - 1
            vCount_internal_1 = vCount_internal_1 + 1
            print("Points: "+ str(points_1))
            print("Number of tries left: "+str(vCount_1))
            if vCount_internal_1 == 5:
                print("GAME OVER! Total points: ", points_1)
                if vChoosename2.lower() != "none":
                    f_roll_dice_2()
                if vChoosename2.lower() == "none":
                    Total_tally()
            if vCount_internal_1 != 5:
                question1 = str(input("Roll again? " ))
    if question1.lower() == "no":
        if vChoosename2.lower() != "none":
            f_roll_dice_2()
        if vChoosename2.lower() == "none":
            restart_function()


